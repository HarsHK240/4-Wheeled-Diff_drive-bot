<?xml version="1.0"?>
<robot name="my_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
	
  <xacro:include filename="/home/ubuntu/mars/src/my_bot_description/urdf/diffbot.ros2_control.xacro" />

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.24 0.21 0.14"/></geometry>
      <material name="blue"><color rgba="0 0 0.8 1.0"/></material>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry><box size="0.24 0.21 0.14"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Gazebo base link properties -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.8</mu1>
    <mu2>0.8</mu2>
  </gazebo>

  <!-- Wheels -->
  <link name="left_wheel_back">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <material name="wheel_black"><color rgba="0.15 0.15 0.15 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0"/>
      <mass value="0.02"/>  
      <inertia ixx="0.00013" ixy="0" ixz="0" iyy="0.00023" iyz="0" izz="0.00013"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel_back">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <link name="right_wheel_back">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <material name="wheel_black"><color rgba="0.15 0.15 0.15 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00013" ixy="0" ixz="0" iyy="0.00023" iyz="0" izz="0.00013"/>
    </inertial>
  </link>

  <gazebo reference="right_wheel_back">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <link name="left_wheel_front">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <material name="wheel_black"><color rgba="0.15 0.15 0.15 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00013" ixy="0" ixz="0" iyy="0.00023" iyz="0" izz="0.00013"/>
    </inertial>
  </link>

  <gazebo reference="left_wheel_front">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <link name="right_wheel_front">
    <visual>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <material name="wheel_black"><color rgba="0.15 0.15 0.15 1.0"/></material>
    </visual>
    <collision>
      <geometry><cylinder length="0.05" radius="0.05"/></geometry>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00013" ixy="0" ixz="0" iyy="0.00023" iyz="0" izz="0.00013"/>
    </inertial>
  </link>

  <gazebo reference="right_wheel_front">
    <material>Gazebo/Black</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
  </gazebo>

  <!-- Wheel joints -->
  <joint name="left_wheel_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_back"/>
    <origin xyz="-0.12 0.13 -0.07" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_back_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_back"/>
    <origin xyz="-0.12 -0.13 -0.07" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <joint name="left_wheel_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_front"/>
    <origin xyz="0.12 0.13 -0.07" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_front_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_front"/>
    <origin xyz="0.12 -0.13 -0.07" rpy="1.5707 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <visual>
      <geometry><box size="0.02 0.02 0.02"/></geometry>
      <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.1 0 0.075" rpy="0 0 0"/>
  </joint>

  <!-- Camera sensors -->
  <gazebo reference="camera_link">
    <material>Gazebo/Grey</material>
    <sensor name="rgb_camera" type="camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image><width>640</width><height>480</height><format>R8G8B8</format></image>
        <clip><near>0.02</near><far>300</far></clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <camera_name>rgb_camera</camera_name>
        <image_topic_name>image_raw</image_topic_name>
        <camera_info_topic_name>camera_info</camera_info_topic_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>

    <sensor name="depth_camera" type="depth_camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image><width>640</width><height>480</height><format>R8G8B8</format></image>
        <clip><near>0.02</near><far>300</far></clip>
      </camera>
      <plugin name="depth_camera_controller" filename="libgazebo_ros_depth_camera.so">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <camera_name>depth_camera</camera_name>
        <image_topic_name>depth/image_raw</image_topic_name>
        <camera_info_topic_name>depth/camera_info</camera_info_topic_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- IMU -->
  <gazebo reference="base_link">
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>50</update_rate>
      <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
        <ros><namespace>/</namespace><remapping>~/out:=imu</remapping></ros>
        <frame_name>base_link</frame_name>
      </plugin>
    </sensor>
  <!-- GPS -->
    <sensor name="gps_sensor" type="gps">
      <always_on>true</always_on>
      <update_rate>1.0</update_rate>
      <plugin name="gps_plugin" filename="libgazebo_ros_gps_sensor.so">
        <ros><namespace>/</namespace><remapping>~/out:=gps</remapping></ros>
        <frame_name>base_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>
  
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find my_bot_description)/config/my_bot_controllers.yaml</parameters>
    </plugin>
  </gazebo>

    <xacro:diffbot_ros2_control
      name="diffbot_system"
      prefix=""
      use_mock_hardware="true" />
 


</robot>

